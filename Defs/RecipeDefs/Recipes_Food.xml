    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Muesli_Fruits</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Muesli_Grains</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <Muesli>64</Muesli>
    </products>
        <recipeUsers>
            <li>ElectricStove</li>
            <li>FueledStove</li>
            <li>Campfire</li>
        </recipeUsers>
    <researchPrerequisite>Pemmican</researchPrerequisite>
  </RecipeDef>
  
</Defs>
